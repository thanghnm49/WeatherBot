{
  "name": "weatherbot",
  "version": "1.0.0",
  "description": "A Telegram bot to check weather using OpenWeather API",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "node bot.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop weatherbot",
    "pm2:restart": "pm2 restart weatherbot",
    "pm2:logs": "pm2 logs weatherbot",
    "pm2:delete": "pm2 delete weatherbot",
    "docker:build": "docker build -t weatherbot .",
    "docker:run": "docker run --env-file .env weatherbot",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "docker:start": "docker-compose start"
  },
  "keywords": [
    "telegram",
    "bot",
    "weather",
    "openweather"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  }
}

